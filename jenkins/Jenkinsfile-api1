pipeline {
    agent any

    environment {
        IMAGE_NAME = 'api1-app'
        CONTAINER_NAME = 'api1-app'
        REPO_URL = 'https://seu-repositorio.git'
        EMAIL_RECIPIENT = 'snaxofc10@gmail.com'
    }

    triggers {
        cron('H 5 * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                git url: env.REPO_URL, branch: 'main'
            }
        }
        stage('Build image') {
            steps {
                dir('advanced-topics') {
                    sh """
                    docker rm -f ${CONTAINER_NAME} || true
                    docker rmi ${IMAGE_NAME} || true
                    docker build -t ${IMAGE_NAME} .
                    """
                }
            }
        }
        stage('Run container') {
            steps {
                sh "docker run -d --name ${CONTAINER_NAME} -p 8080:8080 ${IMAGE_NAME}"
            }
        }
    }

    post {
        success {
            emailext to: env.EMAIL_RECIPIENT,
                     subject: "Job ${env.JOB_NAME} executado com sucesso",
                     body: 'O pipeline concluiu todas as etapas com sucesso.'
        }
        failure {
            emailext to: env.EMAIL_RECIPIENT,
                     subject: "Job ${env.JOB_NAME} falhou",
                     body: 'Houve falha na execução do pipeline.'
        }
    }
}
